@model proiectDAW.Models.Comment

<h1>Editare comentariu</h1>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Comments",
                       method: FormMethod.Post, routeValues: new { id = Model.CommentId }))
{
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.ValidationSummary(false, "", new { @class = "text-danger" })

    @Html.Label("Content", "Continut comentariu")
    <br />
    @Html.EditorFor(m => m.Content)
    @Html.ValidationMessageFor(m => m.Content, "", new { @class = "text-danger" })
    <br />
    <br />

    @Html.HiddenFor(m => m.CommentId)
    @Html.HiddenFor(m => m.TaskId)

    <button type="submit">Editare comentariu</button>
}
<br />
<a class="btn btn-default btn-block" href="/Tasks/Show/@Model.TaskId">Anulare editare comentariu</a>